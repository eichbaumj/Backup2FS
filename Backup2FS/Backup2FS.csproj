  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Backup2FS.Core\Backup2FS.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Icons\app_icon.ico" />
    <!-- <Resource Include="Resources\Images\app_placeholder.png" /> -->
