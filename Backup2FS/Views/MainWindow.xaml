<Window x:Class="Backup2FS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Backup2FS.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:Backup2FS.ViewModels"
        xmlns:converters="clr-namespace:Backup2FS.Converters"
        mc:Ignorable="d"
        Title="Backup2FS" 
        Height="950" 
        Width="1300"
        Icon="pack://application:,,,/Resources/Icons/app_icon.ico"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Custom Style for Options Dialog Checkboxes -->
        <Style x:Key="HighContrastCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="checkBoxBorder" 
                                   Width="25" 
                                   Height="25" 
                                   Background="White" 
                                   BorderBrush="#0078D7" 
                                   BorderThickness="2" 
                                   CornerRadius="3"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0">
                                <Path x:Name="checkMark" 
                                     Data="M 5,12 L 10,18 L 20,5" 
                                     Stroke="White" 
                                     StrokeThickness="3" 
                                     Visibility="Collapsed"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="Background" Value="#0078D7"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Custom Style for Orange Buttons (Select, Normalize, Open Folder) -->
        <Style x:Key="OrangeButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Background" Value="{StaticResource ElusiveDataOrangeBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ElusiveDataRedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Custom Style for Red Buttons (Pause, Cancel, Save Log) -->
        <Style x:Key="RedButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}">
            <Setter Property="Background" Value="{StaticResource ElusiveDataRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ElusiveDataOrangeBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Dialog Template for Options -->
        <DataTemplate x:Key="OptionsDialogTemplate">
            <Grid Width="600" Height="400">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Title Bar - Blue Header -->
                <Border Grid.Row="0" Background="#0078D7" Padding="8,4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                  Text="Options" 
                                  Foreground="White" 
                                  FontSize="14" 
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0"/>
                        
                        <Button Grid.Column="2" 
                               Style="{StaticResource MaterialDesignFlatButton}"
                               Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                               CommandParameter="False"
                               Padding="4"
                               Foreground="White"
                               Margin="0,-2,0,0"
                               MinWidth="0">
                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Side Nav Bar - Dark Navy Blue -->
                    <Border Grid.Column="0" Background="#121E2B">
                        <StackPanel>
                            <!-- Selected Item - Highlighted with white lines above and below -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="1"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Top White Line -->
                                <Border Grid.Row="0" Background="White" Opacity="0.3"/>
                                
                                <!-- Selected Menu Item -->
                                <Border Grid.Row="1" Background="#0078D7" Padding="16,10">
                                    <TextBlock Text="Hash Algorithms" 
                                              Foreground="White"
                                              FontSize="14"/>
                                </Border>
                                
                                <!-- Bottom White Line -->
                                <Border Grid.Row="2" Background="White" Opacity="0.3"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Right Side Content - White -->
                    <Border Grid.Column="1" Background="White">
                        <StackPanel Margin="16,16,16,0">
                            <TextBlock Text="Hash Algorithms" 
                                     Foreground="#333333"
                                     FontWeight="SemiBold"
                                     FontSize="16" 
                                     Margin="0,0,0,16"/>
                            
                            <Border Background="#F5F5F5" Padding="16,12,16,12">
                                <StackPanel>
                                    <CheckBox Content="MD5" 
                                            IsChecked="{Binding UsesMD5}" 
                                            Style="{StaticResource HighContrastCheckBox}"/>
                                    
                                    <CheckBox Content="SHA-1" 
                                            IsChecked="{Binding UsesSHA1}" 
                                            Style="{StaticResource HighContrastCheckBox}"/>
                                    
                                    <CheckBox Content="SHA-256" 
                                            IsChecked="{Binding UsesSHA256}" 
                                            Style="{StaticResource HighContrastCheckBox}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Footer with OK/Cancel buttons -->
                <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="16,12">
                        <Button Content="OK" 
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                               CommandParameter="True"
                               Width="100"
                               Margin="0,0,8,0"
                               Background="{DynamicResource ElusiveDataOrangeBrush}"
                               Foreground="White"/>
                        
                        <Button Content="Cancel" 
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                               CommandParameter="False"
                               Width="100"
                               Background="#666666"
                               Foreground="White"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>
        
        <!-- Dialog Template for About -->
        <DataTemplate x:Key="AboutDialogTemplate">
            <Grid Width="500" Height="450">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Title Bar - Standard Windows Style -->
                <Border Grid.Row="0" Background="#0078D7" Padding="8,4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Image Grid.Column="0" 
                               Source="pack://application:,,,/Resources/Icons/app_icon.ico" 
                               Width="16" 
                               Height="16" 
                               Margin="8,0,4,0" 
                               VerticalAlignment="Center"/>
                        
                        <TextBlock Grid.Column="1" 
                                  Text="About Backup2FS" 
                                  Foreground="White" 
                                  FontSize="14" 
                                  VerticalAlignment="Center"
                                  Margin="4,0,0,0"/>
                        
                        <Button Grid.Column="2" 
                               Style="{StaticResource MaterialDesignFlatButton}"
                               Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                               Padding="4"
                               Foreground="White"
                               Margin="0,-2,0,0"
                               MinWidth="0">
                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Logo Banner with Navy Blue Background -->
                <Border Grid.Row="1" Background="{DynamicResource ElusiveDataDarkBlueBrush}" 
                       Padding="24,24,24,24" 
                       HorizontalAlignment="Stretch">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="pack://application:,,,/Resources/Images/logo.png" 
                              Height="80" 
                              HorizontalAlignment="Center" 
                              Margin="0,8,0,16"/>
                        
                        <TextBlock Text="iOS Backup Normalizer v1.0" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"
                                  FontSize="16"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                </Border>
                
                <!-- Contact Information Section -->
                <Border Grid.Row="2" Background="#1A2C42">
                    <StackPanel VerticalAlignment="Center" Margin="24,32,24,32">
                        <TextBlock Text="Â© 2025 Elusive Data" 
                                  HorizontalAlignment="Center" 
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  Margin="0,0,0,12"/>
                        
                        <TextBlock Text="All Rights Reserved" 
                                  HorizontalAlignment="Center" 
                                  FontSize="13"
                                  Foreground="White"
                                  Margin="0,0,0,24"/>
                        
                        <TextBlock HorizontalAlignment="Center" 
                                  FontSize="13"
                                  Foreground="White"
                                  Margin="0,0,0,8">
                            <Run Text="www.elusivedata.io"/>
                            <Run Text=" | "/>
                            <Run Text="support@elusivedata.io"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- Footer/OK Button -->
                <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
                    <Button Content="OK" 
                           Style="{StaticResource MaterialDesignRaisedButton}"
                           Background="{DynamicResource ElusiveDataOrangeBrush}"
                           Foreground="White"
                           Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                           Margin="12"
                           Width="100"
                           HorizontalAlignment="Right"/>
                </Border>
            </Grid>
        </DataTemplate>
        
        <!-- Style for info button -->
        <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
        </Style>
        <converters:BooleanToPauseResumeTextConverter x:Key="BooleanToPauseResumeTextConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <materialDesign:DialogHost Identifier="RootDialog">
        <DockPanel>
            <!-- Header with Logo and Icon Buttons -->
            <Grid DockPanel.Dock="Top" Background="{DynamicResource ElusiveDataDarkBlueBrush}" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo and App Name -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Image Source="pack://application:,,,/Resources/Images/logo.png" Height="30" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Backup2FS" VerticalAlignment="Center" Foreground="White" FontSize="16" Margin="20,0,0,0"/>
                </StackPanel>
                
                <!-- Icon Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <!-- New Session Button -->
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            ToolTip="New Session" 
                            Command="{Binding NewSessionCommand}"
                            IsEnabled="{Binding IsProcessing}"
                            Foreground="White"
                            Background="#142A40"
                            BorderBrush="White"
                            BorderThickness="1"
                            Width="40" Height="40"
                            Margin="8,0">
                        <materialDesign:PackIcon Kind="Refresh" Width="22" Height="22"/>
                    </Button>
                    
                    <!-- Info Button -->
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            ToolTip="About" 
                            Click="InfoButton_Click"
                            Foreground="White"
                            Background="#142A40"
                            BorderBrush="White"
                            BorderThickness="1"
                            Width="40" Height="40"
                            Margin="8,0">
                        <materialDesign:PackIcon Kind="Information" Width="22" Height="22"/>
                    </Button>
                    
                    <!-- Settings Button -->
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            ToolTip="Settings" 
                            Click="SettingsButton_Click"
                            Foreground="White"
                            Background="#142A40"
                            BorderBrush="White"
                            BorderThickness="1"
                            Width="40" Height="40"
                            Margin="8,0">
                        <materialDesign:PackIcon Kind="Settings" Width="22" Height="22"/>
                    </Button>
                    
                    <!-- Exit Button -->
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            ToolTip="Exit" 
                            Command="{Binding ExitCommand}"
                            Foreground="White"
                            Background="#142A40"
                            BorderBrush="White"
                            BorderThickness="1"
                            Width="40" Height="40"
                            Margin="8,0">
                        <materialDesign:PackIcon Kind="ExitToApp" Width="22" Height="22"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="420"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Side - Device Info and Apps -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Left Panel - Device Info -->
                    <materialDesign:Card Grid.Row="0" Margin="20,20,10,10" 
                                       materialDesign:ShadowAssist.ShadowDepth="Depth3" 
                                       Background="{DynamicResource ElusiveDataBlueBrush}"
                                       VerticalAlignment="Top">
                        <DockPanel VerticalAlignment="Stretch">
                            <TextBlock DockPanel.Dock="Top" Text="Device Information" 
                                     Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                     Margin="16,16,16,0" 
                                     Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                            
                            <ScrollViewer DockPanel.Dock="Top" Margin="16" Height="385" 
                                         VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Device Name:" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DeviceName}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Model:" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Model}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="iOS Version:" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding IosVersion}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Build Version:" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding BuildVersion}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Serial Number:" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SerialNumber}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Unique Device ID:" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding UniqueDeviceId}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12" TextWrapping="Wrap"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    
                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="IMEI:" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Imei}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    
                                    <TextBlock Grid.Row="7" Grid.Column="0" Text="MEID:" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Meid}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    
                                    <TextBlock Grid.Row="8" Grid.Column="0" Text="ICCID:" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding Iccid}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    
                                    <TextBlock Grid.Row="9" Grid.Column="0" Text="Encrypted:" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding IsEncrypted}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    
                                    <TextBlock Grid.Row="10" Grid.Column="0" Text="Phone Number:" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    <TextBlock Grid.Row="10" Grid.Column="1" Text="{Binding PhoneNumber}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    
                                    <TextBlock Grid.Row="11" Grid.Column="0" Text="Backup Date:" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                    <TextBlock Grid.Row="11" Grid.Column="1" Text="{Binding LastBackupDate}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                             Margin="0,4" FontSize="12"
                                             Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                                </Grid>
                            </ScrollViewer>
                        </DockPanel>
                    </materialDesign:Card>
                    
                    <!-- Installed Apps -->
                    <materialDesign:Card Grid.Row="1" Margin="20,0,10,20" 
                                      materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                      Background="{DynamicResource ElusiveDataBlueBrush}">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Installed Apps" 
                                     Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                     Margin="16,16,16,0"
                                     Foreground="{DynamicResource ElusiveDataLightGrayBrush}"/>
                            
                            <ListBox Margin="16" ItemsSource="{Binding InstalledApps}" 
                                   ScrollViewer.VerticalScrollBarVisibility="Auto" 
                                   HorizontalContentAlignment="Stretch"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   VirtualizingPanel.IsVirtualizing="True"
                                   VirtualizingPanel.VirtualizationMode="Recycling"
                                   VirtualizingPanel.ScrollUnit="Pixel"
                                   VirtualizingPanel.CacheLength="5"
                                   ScrollViewer.IsDeferredScrollingEnabled="False"
                                   Foreground="{DynamicResource ElusiveDataLightGrayBrush}">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                        <Setter Property="Padding" Value="8,6"/>
                                        <Setter Property="Margin" Value="0,2"/>
                                        <Setter Property="Background" Value="#21354D"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border Background="{TemplateBinding Background}"
                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                           CornerRadius="4"
                                                           Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="#2C4560"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2C4560"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- App Icon -->
                                            <Grid Grid.Column="0" Width="40">
                                                <Grid Width="30" Height="30" Margin="3,0">
                                                    <!-- Background icon (always visible) -->
                                                    <materialDesign:PackIcon Kind="ApplicationOutline" 
                                                                          Width="24" Height="24"
                                                                          HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"
                                                                          Foreground="LightGray"/>
                                                    
                                                    <!-- Actual app icon (visible when HasIcon is true) -->
                                                    <Image Width="24" Height="24"
                                                          Source="{Binding IconImage}" 
                                                          RenderOptions.BitmapScalingMode="HighQuality"
                                                          Stretch="Uniform"
                                                          SnapsToDevicePixels="True"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          CacheMode="BitmapCache"
                                                          Visibility="{Binding HasIcon, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </Grid>
                                            </Grid>
                                            
                                            <!-- App Name/Bundle ID with DisplayName fallback -->
                                            <TextBlock Grid.Column="1" 
                                                      Text="{Binding DisplayName}"
                                                      TextTrimming="CharacterEllipsis"
                                                      VerticalAlignment="Center"
                                                      FontSize="13"
                                                      Foreground="White">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding DisplayName}" Value="{x:Null}">
                                                                <Setter Property="Text" Value="{Binding BundleId}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding DisplayName}" Value="">
                                                                <Setter Property="Text" Value="{Binding BundleId}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                    </materialDesign:Card>
                </Grid>
                
                <!-- Right Side - Controls and Log -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Right Panel - Main Controls -->
                    <Grid Grid.Row="0" Margin="10,20,20,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- iOS Backup Normalizer Title -->
                        <TextBlock Grid.Row="0" Text="iOS Backup Normalizer" 
                                   Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                        
                        <!-- Folder Inputs -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Backup Folder Row -->
                            <DockPanel Grid.Row="0" Margin="0,0,0,16">
                                <TextBlock DockPanel.Dock="Left" Text="Backup Folder" 
                                          VerticalAlignment="Center" Width="120" />
                                <Button DockPanel.Dock="Right" Margin="16,0,0,0"
                                       Command="{Binding BrowseBackupCommand}" 
                                       Style="{StaticResource OrangeButtonStyle}">
                                    <TextBlock Text="Select" />
                                </Button>
                                <TextBox Text="{Binding BackupFolder, UpdateSourceTrigger=PropertyChanged}" 
                                        Style="{StaticResource MaterialDesignFilledTextBox}" />
                            </DockPanel>
                            
                            <!-- Destination Folder Row -->
                            <DockPanel Grid.Row="1" Margin="0,0,0,16">
                                <TextBlock DockPanel.Dock="Left" Text="Destination Folder" 
                                          VerticalAlignment="Center" Width="120" />
                                <Button DockPanel.Dock="Right" Margin="16,0,0,0"
                                       Command="{Binding BrowseOutputCommand}" 
                                       Style="{StaticResource OrangeButtonStyle}">
                                    <TextBlock Text="Select" />
                                </Button>
                                <TextBox Text="{Binding OutputFolder, UpdateSourceTrigger=PropertyChanged}" 
                                        Style="{StaticResource MaterialDesignFilledTextBox}" />
                            </DockPanel>
                            
                            <!-- Normalize Button -->
                            <Button Grid.Row="2" Content="Normalize" 
                                   HorizontalAlignment="Center" 
                                   Style="{StaticResource OrangeButtonStyle}"
                                   Command="{Binding NormalizeCommand}"
                                   IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"
                                   Margin="0,16,0,0" 
                                   Height="40" 
                                   Width="200" 
                                   materialDesign:ButtonAssist.CornerRadius="20"/>
                        </Grid>
                    </Grid>
                    
                    <!-- Log Output Area -->
                    <Grid Grid.Row="1" Margin="10,0,20,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Log TextBox -->
                        <TextBox Grid.Row="0" 
                                x:Name="LogTextBox"
                                Text="{Binding LogOutput, Mode=OneWay}" 
                                IsReadOnly="True" 
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                TextWrapping="NoWrap"
                                FontFamily="Consolas"
                                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                                Padding="8"/>
                        
                        <!-- Progress Bar and Control Buttons -->
                        <Grid Grid.Row="1" Margin="0,8,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Progress Bar -->
                            <Grid Grid.Row="0">
                                <ProgressBar Height="24" Minimum="0" Maximum="100" 
                                           Value="{Binding ProgressValue}" 
                                           Foreground="Green"
                                           Background="{DynamicResource MaterialDesignDivider}"/>
                                
                                <!-- Percentage Text Overlay -->
                                <TextBlock Text="{Binding ProgressValue, StringFormat='{}{0}%'}" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" 
                                         Foreground="White" 
                                         FontWeight="Bold"/>
                            </Grid>
                            
                            <!-- Control Buttons -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                <Button x:Name="PauseResumeButton"
                                        Content="{Binding IsPaused, Converter={StaticResource BooleanToPauseResumeTextConverter}, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                        Command="{Binding PauseResumeCommand}"
                                        IsEnabled="{Binding IsNormalizing}"
                                        Style="{StaticResource RedButtonStyle}"
                                        Width="120"
                                        Margin="8,0"/>
                                
                                <Button Content="Cancel" 
                                       Style="{StaticResource RedButtonStyle}"
                                       Command="{Binding CancelCommand}" 
                                       IsEnabled="{Binding IsNormalizing}"
                                       Margin="8,0" Width="120"/>
                                
                                <Button Content="Save Log" 
                                       Style="{StaticResource RedButtonStyle}"
                                       Command="{Binding SaveLogCommand}" 
                                       IsEnabled="{Binding CanSaveLog}"
                                       Margin="8,0" Width="120"/>
                                
                                <Button Content="Open Folder" 
                                       Style="{StaticResource OrangeButtonStyle}"
                                       Command="{Binding OpenFolderCommand}" 
                                       IsEnabled="{Binding IsCompleted}"
                                       Margin="8,0" Width="120"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </DockPanel>
    </materialDesign:DialogHost>
</Window> 