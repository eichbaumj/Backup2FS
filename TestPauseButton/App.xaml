<Application x:Class="TestPauseButton.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TestPauseButton"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepOrange" SecondaryColor="Red" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Custom Colors -->
            <Color x:Key="BrandDarkBlue">#0A1929</Color>
            <Color x:Key="BrandBlue">#1976D2</Color>
            <Color x:Key="BrandRed">#F44336</Color>
            <Color x:Key="BrandOrange">#FF5722</Color>
            <Color x:Key="BrandLightGray">#ECEFF1</Color>
            <Color x:Key="MenuBackground">#121212</Color>
            
            <!-- Material Design Color Overrides -->
            <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="{StaticResource BrandOrange}"/>
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="{StaticResource BrandOrange}"/>
            <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="{StaticResource BrandOrange}"/>
            <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="{StaticResource BrandRed}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
